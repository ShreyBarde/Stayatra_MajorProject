<!-- //views/listings/show.ejs - this file contains the detailed view of a single listing -->
<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
  <div class="col-8 offset-3">
       <h1><%= listing && listing.title ? listing.title : 'Listing' %></h1>
    </div>
<body>
  <% if (!listing) { %>
    <div class="alert alert-warning mt-4">Listing not found.</div>
  <% } else { %>
  <!-- let listing = Listings -->
  <div class="card col-6 offset-3">
          
                   
                    <% 
                      const fallbackImg = 'https://images.unsplash.com/photo-1521401830884-6c03c1c87ebb?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=60';
                      let imgSrc = (typeof listing.image === 'string' && listing.image) ? listing.image : (listing.image && listing.image.url) ? listing.image.url : fallbackImg;
                      try {
                        const m = imgSrc && imgSrc.match(/unsplash\.com\/photos\/([A-Za-z0-9_-]+)/);
                        if (m) imgSrc = `https://source.unsplash.com/${m[1]}/800x600`;
                      } catch(e){}
                    %>

                      <img src="<%= imgSrc %>" class="card-img-top" alt="...">

                        <div class="card-body">
                          
                          <p class="card-text">
                            <% // Render each owner username if available; otherwise fall back to 'Unknown owner' %>
                            <% if (Array.isArray(listing.owner) && listing.owner.length) { %>
                              <% for (let o of listing.owner) { %>
                                <i><%= o && o.username ? o.username : 'Unknown owner' %></i>
                              <% } %>
                            <% } else if (listing.owner && listing.owner.username) { %>
                              <i><%= listing.owner.username %></i>
                            <% } else { %>
                              <i>Unknown owner</i>
                            <% } %> 
                            <br>
                            <%= listing.description %></p><br>
                          <p class="card-text">Price: <%= (typeof listing.price === 'number' || !isNaN(Number(listing.price))) ? new Intl.NumberFormat('en-IN', { style: 'currency', currency: 'INR' }).format(Number(listing.price)) : 'N/A' %> / night</p>
                          
                          <p class="card-text"><i class="fa-solid fa-location-dot"></i><%= listing.location %>,<%= listing.country %></p>
                          
                          <% // Only show Edit/Delete buttons if current user is the owner %>
                          <% if(currentUser && Array.isArray(listing.owner) && listing.owner.some(o => o && String(o._id) === String(currentUser._id))) { %>

                          <!-- <div id="map" class="map-container"></div>  -->
                          
                          <div class="d-flex gap-3 btns">
                            <!-- Edit button -->
                            <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark edit-btn">
                              Edit
                            </a>
  
                            <!-- Delete button -->
                            <form method="post" action="/listings/<%= listing._id %>?_method=DELETE">
                                  <button type="submit" class="btn btn-danger ">Delete</button>
                            </form>

                          </div>
                          <% } %>
                        </div>
                    
         </div><hr>
        <% if(currentUser) { %>

         <div class="col-8 offset-3 mt-3 mb-3">
                              <h4>Leave a review</h4>

                              <form 
                                  action="/listings/<%= listing._id %>/reviews" novalidate  method="post" class="mt-3 mb-3 needs-validation">
                                <div class="mb-3">
                                  
                                <fieldset class="starability-slot">
                                <legend>First rating:</legend>
                                <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
                                <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                                <label for="first-rate1" title="Terrible">1 star</label>
                                <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                                <label for="first-rate2" title="Not good">2 stars</label>
                                <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                                <label for="first-rate3" title="Average">3 stars</label>
                                <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                                <label for="first-rate4" title="Very good">4 stars</label>
                                <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                                <label for="first-rate5" title="Amazing">5 stars</label>
                              </fieldset>
                                </div>

                                <div class="mb-3">
                                  <label for="comment" class="form-label">Comment</label>
                                 <textarea ... name="review[comment]" cols="30" rows="5" class="form-control" id="comment" required></textarea>
                                <div class="invalid-feedback">
                                  please add some comment for review
                                </div>
                                </div>
                                <button type="submit" class=" btn btn-success">submit</button>
                              </form>
                           <% }  %>             
            </div><hr>
            
            <p><b>All Reviews</b></p>
           
           <div class="row ">
             <% if (Array.isArray(listing.reviews) && listing.reviews.length) { %>
             <% for (let review of listing.reviews) { %>
                  <div class="card col-5 ms-3 mb-3  mt-3  ">
                      <div class="card-body">
                        <h5 class="card-title"><%= review.author && review.author.username ? review.author.username : 'Anonymous'  %></h5>
                        
                          <p class="starability-result stars" data-rating="<%= review.rating %>">
                            <%= review.rating %>
                          </p>

                          <b><p class="card-text"><%= review.comment %></p></b>
                        
                      </div>
                      <% if(currentUser && review.author && String(review.author._id) === String(currentUser._id)) { %>
                      <form action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" method="post">
                          <button class="btn btn-sm btn-dark mb-3">delete</button>
                      </form>
                      <% } %>
                    </div>
               <% } %>
               <% } else { %>
                 <p class="ms-3">No reviews yet.</p>
               <% } %>
            </div>
             
      </div>
    <% } %>

  



</body>
